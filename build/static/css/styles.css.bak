/* Font */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Outfit:wght@500;700&display=swap');

:root {
  --primary: #6366f1;          /* Indigo */
  --accent: #06b6d4;           /* Cyan */
  --danger: #ef4444;
  --success: #22c55e;
  --warning: #f59e0b;

  --bg-page: #0f172a;          /* Dark navy background */
  --surface: rgba(255,255,255,0.08); /* Glass surface */
  --surface-hover: rgba(255,255,255,0.15);

  --text-main: #f9fafb;
  --text-muted: #94a3b8;

  --radius-sm: 12px;
  --radius-md: 20px;
  --radius-lg: 26px;

  --shadow-soft: 0 10px 30px rgba(0,0,0,0.35);
  --shadow-hover: 0 16px 45px rgba(6,182,212,0.55);
  --shadow-glow: 0 0 8px 3px #06b6d4;

  --transition-fast: 0.18s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-base: 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Global resets */
*,
*::before,
*::after {
  box-sizing: border-box;
  transition: var(--transition-base);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Body */
body {
  margin: 0;
  font-family: 'Inter', system-ui, sans-serif;
  background: var(--bg-page);
  color: var(--text-main);
  min-height: 100vh;
  -webkit-font-smoothing: antialiased;
}

